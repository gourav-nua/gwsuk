<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">                
            <referenceBlock name="product.info.description">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Product Description</argument>
                </arguments>
            </referenceBlock>
        </referenceBlock>
         <referenceContainer name="content">
          <block class="Magento\Cms\Block\Block" name="recently-view-products" after="catalog.product.related">
            <arguments>
              <argument name="block_id" xsi:type="string">recently-view-products</argument>
            </arguments>
          </block>
        </referenceContainer>
        <referenceBlock name="reviews.tab" remove="true" />
        
        <move element="product.info.stock.sku" destination="product.info.price" before="product.price.final"/>
    </body>
</page>
